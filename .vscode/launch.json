    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Flux Kontext Training 1GPU",
            "type": "python",
            "request": "launch",
            "module": "accelerate.commands.launch",
            "args": [
                "--config_file", "scripts/accelerate_configs/multi_gpu.yaml",
                "--num_processes=1",
                "--main_process_port", "9001",
                "scripts/train_flux_kontext.py",
                "--config", "config/grpo_ir.py:ir_flux_kontext_1gpu"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "WANDB_MODE": "offline"
            }
        },
        {
            "name": "Debug Qwen Image Training 1GPU",
            "type": "python",
            "request": "launch",
            "module": "accelerate.commands.launch",
            "args": [
                "--config_file", "scripts/accelerate_configs/multi_gpu.yaml",
                "--num_processes=1",
                "--main_process_port", "9001",
                "scripts/train_qwenimage_edit.py",
                "--config", "config/grpo_ir.py:ir_qwenimage_edit_1gpu"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "WANDB_MODE": "offline",
                "CUDA_VISIBLE_DEVICES": "0",
                "HF_HOME": "../.cache/huggingface",
            }
        }
    ]
}